<% layout('/layout/boilerplate') %> 

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3" >
            <img src="<%= campground.image %> " class="card-img-top" alt="">
            <div class="card-body">
              <h5 class="card-title"> <%= campground.title  %> </h5>
              <p class="card-text"><%= campground.description %> </p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= campground.location %> </li>
              <li class="list-group-item">$<%= campground.price %>/Night </li>
            </ul>
            <div class="card-body">
                <a href="/campgrounds/<%=campground._id %>/edit" class="card-link btn btn-info text-white">Edit Campground</a>
                <form class="d-inline" action="/campgrounds/<%= campground.id %>?_method=DELETE" method="post">
                    <button class="btn btn-danger">Delete Campground</button>
                </form>
            </div>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>
        <h2>Leave a Review</h2>
        <form action="" method="post" class="mb-3">
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" name="review[rating]" id="rating" min="1" max="5" class="form-range">
            </div>
            <div class="mb-3">
                <label for="body" class="form-label">Review</label>
                <textarea name="review[body]" id="body" cols="30" rows="5" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>        
    </div>
</div>